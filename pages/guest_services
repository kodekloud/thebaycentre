<script>
    $("#left_image").attr("src", "http://assets.kodekloud.io/sites/556628266e6f640eb3000000/100437cc60f41ae910b0356151c200b6/guest_banner3.jpg");
    $("#right_image").attr("src", "http://assets.kodekloud.io/sites/556628266e6f640eb3000000/100437cc60f41ae910b0356151c200b6/guest_banner2.jpg");
    $("#main_image").attr("src", "http://assets.kodekloud.io/sites/556628266e6f640eb3000000/100437cc60f41ae910b0356151c200b6/guest_banner1.jpg");
    
    function show_stores(id){
       if ($("#cat_"+id+"_stores").is(":visible")){
           $("#cat_"+id+"_stores").slideUp();
           $("#icon_"+id).removeClass("fa-minus")
           $("#icon_"+id).addClass("fa-plus")
       } else {
           $("#cat_"+id+"_stores").slideDown();
           $("#icon_"+id).removeClass("fa-plus")
           $("#icon_"+id).addClass("fa-minus")
       }
    }
    
    
    
    
    
    $(document).ready(function() {
        
        function renderAll(){
            var prefix = get_prefix();
            var page_array = ["baycentre-guest-services-free-wifi","baycentre-guest-services-wheelchair-baby","baycentre-guest-services-lost-found","baycentre-guest-services-job-opportunity","baycentre-guest-services-gift-cards","baycentre-guest-services-faxing-photocopying","baycentre-guest-services-bus-passes-tickets","baycentre-guest-services-visitor-information"]
            full_page_array = []
            
            $.each( page_array , function( key, val ) {
                
                var pages_json = prefix+"/pages/" + val + ".json"
                $.getJSON(pages_json).then(function(data) {
                    renderblock(data.title, data.body, val)
                })
                
                
                
            })
           
        }
        
        function renderblock(name, html, slug){
            $("#cat_stores_container").append('<div class="cat_div" id="cat_'+slug+'" onclick="javascript:show_stores("'+slug+'")">'+name+'<i id="icon_'+slug+'" class="fa fa-plus list_icon"></i></div><div class="stores_div" id="cat_'+slug+'_stores">'+html+'</div>')
            
        }
        
        loadMallData(renderAll); 
    })
</script>