<script>
    $("#left_image").attr("src", "http://assets.kodekloud.io/sites/556628266e6f640eb3000000/8dbac6c93fba1a1cc183512cb3213260/job_banner3.jpg");
    $("#right_image").attr("src", "http://assets.kodekloud.io/sites/556628266e6f640eb3000000/8dbac6c93fba1a1cc183512cb3213260/job_banner2.jpg");
    $("#main_image").attr("src", "http://assets.kodekloud.io/sites/556628266e6f640eb3000000/8dbac6c93fba1a1cc183512cb3213260/job_banner1.jpg");
    
    $(document).ready(function() {
        function renderPageData(){
            all_promos = getJobsList();
            all_promos = all_promos.reverse();
            promo_array = []
            feature_promo_array = []
             $.each( all_promos , function( key, val ){
                if (val.description.length > 110) {
                   val.description =  val.description.substring(0,300)+'...';
                } 
                 today = new Date();
                 webDate = new Date(val.show_on_web_date)
                 if (today >= webDate) {
                     promo_array.push(val)
                 } 
             });
            all_promos = promo_array;
            if (all_promos.length > 0) {
                renderDetailData("#store_promo_container","#store_promo_template", all_promos, "promos");    
            } else {
                $("#no_event_container").show();
            }
            
            $.getScript("http://cdn.jsdelivr.net/slimbox/2.0.5/js/slimbox2.js");
            $('head').append('<link rel="stylesheet" href="http://cdn.jsdelivr.net/slimbox/2.0.5/css/slimbox2.css" type="text/css" media="screen" />');
            $(".loading_overlay").hide();
            $("#page_content").show();
        }
        
        function renderDetailData(container, template, collection, type){
            var item_list = [];
            var item_rendered = [];
            var template_html = $(template).html();
            Mustache.parse(template_html);   // optional, speeds up future uses
            $.each( collection , function( key, val ) {
            
                    if (val.jobable_type == "Store"){
                        var store_details = getStoreDetailsByID(val.jobable_id)
                        if(!store_details.store_front_url ||  store_details.store_front_url.indexOf('missing.png') > -1 || store_details.store_front_url.length === 0){
                            val.alt_promo_image_url = "http://assets.kodekloud.io/sites/556628266e6f640eb3000000/d52d75490b904799149bedd8a0f02ffe/storedetail_default.jpg"    
                        } else {
                            val.alt_promo_image_url = getImageURL(store_details.store_front_url);    
                        }    
                    } else {
                       val.alt_promo_image_url = "http://assets.kodekloud.io/sites/556628266e6f640eb3000000/d52d75490b904799149bedd8a0f02ffe/storedetail_default.jpg" 
                    }
                    
                    
               
                
                if (val.jobable_type == "Store"){
                    var store_details = getStoreDetailsByID(val.jobable_id)
                    val.store_info = '<a href="/stores/'+store_details.slug+'"><img src="http://assets.kodekloud.io/sites/556628266e6f640eb3000000/591c7592ceb43ac4f0b12c32d6af5630/promo_icon_info.png" class="store_promo_button_icon" alt="store_promo_button_icon"><p>store info</p></a>'
                }
                $("#promo_header").show();   
                var rendered = Mustache.render(template_html,val);
                item_rendered.push(rendered);
            });
            
            $(container).show();
            $(container).html(item_rendered.join(''));
        }
        
        loadMallDataCached(renderPageData);
    });
</script>