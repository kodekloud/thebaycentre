<script>

    $(document).ready(function() {
        function renderAll(){
            var category_stores = getStoresListByCategory();
            var categories = getStoreCategories();
            renderPageData("#cat_stores_container","#cat_stores_template", categories, "cats")
        }
        
        
        
        
        function renderPageData(container, template, collection, type){
            var item_list = [];
            var item_rendered = [];
            var template_html = $(template).html();
            Mustache.parse(template_html);   // optional, speeds up future uses
 
            // item_list.push(collection);    
            
            
            $.each( collection , function( key, val ) {
             
                if (type == "cats"){
                    val.count = val.store_ids.length  
                    $.each( val.store_ids , function( key, val2 ) {
                      console.log(val2)  
                    })
                }
                
                var rendered = Mustache.render(template_html,val);
                item_rendered.push(rendered);
            });
            
            $(container).show();
            $(container).html(item_rendered.join(''));
        }
        
        loadMallData(renderAll);  
    })

    $(".tabs li").click(function(e){
        var clicked = this.id
        $(".tabs li").css({"background":"transparent","color":"white"});
        $(".tabs li").find("div").css("color","white");
        $(this).css("background","white");
        $(this).find("div").css("color","#4d4d4f");
        $(".tab_content li").hide();
        $("#"+clicked + "_content").show()
        $("#"+clicked + "_content li").show()
    });
    
    $("#left_image").attr("src", "http://assets.kodekloud.io/sites/556628266e6f640eb3000000/46aca5797e3b84bd6d66160428052711/findstore_banner3.jpg");
    $("#right_image").attr("src", "http://assets.kodekloud.io/sites/556628266e6f640eb3000000/46aca5797e3b84bd6d66160428052711/findstore_banner2.jpg");
    $("#main_image").attr("src", "http://assets.kodekloud.io/sites/556628266e6f640eb3000000/46aca5797e3b84bd6d66160428052711/findstore_banner1.jpg");
</script>