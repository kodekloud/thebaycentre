<script type="text/javascript" >
  
    $(".tabs li").click(function(e){
        var clicked = this.id
        $(".tabs li").css({"background":"transparent","color":"white"});
        $(".tabs li").find("div").css("color","white");
        $(this).css("background","white");
        $(this).find("div").css("color","#4d4d4f");
        $(".tab_content li").hide();
        $("#"+clicked + "_content").show()
        $("#"+clicked + "_content li").show()
        load_slider("flexslider3")
    
    });
    
    function load_slider(slider){
        
            $('.'+slider).flexslider({
                animation: "slide",
                controlNav: false,
                directionNav: true,        
                prevText: "",
                nextText: ""
            });
        }
        
    $( ".social_icon" ).hover(
      function() {
        $( this ).attr("src",get_social_hover(this.id, "enter"));
      }, function() {
        $( this ).attr( "src",get_social_hover(this.id, "exit") )
      }
    );
        
    
    function get_social_hover (id, event){
        switch (event){
            case "enter":
                if (id == "social_instagram"){
                    return "http://assets.kodekloud.io/sites/556628266e6f640eb3000000/a578c8b64c614c3eac576155beb18963/header_social_instagram.png"    
                }
                if (id == "social_facebook"){
                    return "http://assets.kodekloud.io/sites/556628266e6f640eb3000000/a578c8b64c614c3eac576155beb18963/header_social_fb.png"    
                }
                if (id == "social_twitter"){
                    return "http://assets.kodekloud.io/sites/556628266e6f640eb3000000/a578c8b64c614c3eac576155beb18963/header_social_twit.png"    
                    
                }
                if (id == "social_youtube"){
                    return "http://assets.kodekloud.io/sites/556628266e6f640eb3000000/a578c8b64c614c3eac576155beb18963/header_social_youtube.png"
                    
                }
                if (id == "social_blog"){
                   return "http://assets.kodekloud.io/sites/556628266e6f640eb3000000/a578c8b64c614c3eac576155beb18963/header_social_blog.png" 
                    
                }
                break;
            case "exit":
                
                    if (id == "social_instagram"){
                        return "http://assets.kodekloud.io/sites/556628266e6f640eb3000000/19be0dcfe6428f0d1b57c253af02c6ce/hover_social_instagram.png"
                    }
                    if (id == "social_facebook"){
                        return "http://assets.kodekloud.io/sites/556628266e6f640eb3000000/19be0dcfe6428f0d1b57c253af02c6ce/hover_social_fb.png"   
                    }
                    if (id == "social_twitter"){
                        return "http://assets.kodekloud.io/sites/556628266e6f640eb3000000/19be0dcfe6428f0d1b57c253af02c6ce/hover_social_twit.png"
                        
                    }
                    if (id == "social_youtube"){
                        return "http://assets.kodekloud.io/sites/556628266e6f640eb3000000/19be0dcfe6428f0d1b57c253af02c6ce/hover_social_youtube.png"
                        
                    }
                    if (id == "social_blog"){
                       return "http://assets.kodekloud.io/sites/556628266e6f640eb3000000/19be0dcfe6428f0d1b57c253af02c6ce/hover_social_blog.png"
                        
                    }
            
                break;    
        }
            
    }
    
    $(document).ready(function() {
        function render_page_details(){
            var promos = getPromotionsList();
            renderHomePageData("#feature_slider_ul", "#feature_slider_template", promos, "feature_promos");
            renderHomePageData("#promo_slider_ul", "#current_promo_slider_template", promos, "feature_promos")
            load_slider("flexslider");
            
            var featureList = getFeatureList();
            renderHomePageData("#feature_container", "#feature_template", featureList, "feature_items") 
            
            var banner_hours = getTodaysHours();
            renderHomePageData("#banner_hours_container", "#banner_hours_template", banner_hours, "banner_hours") 
            
        }
        loadMallData(render_page_details);  
        
        
        function renderHomePageData(container, template, collection, type){
            var item_list = [];
            var item_rendered = [];
            var template_html = $(template).html();
            Mustache.parse(template_html);   // optional, speeds up future uses
            if (type == "banner_hours"){
                item_list.push(collection)
                collection = item_list
            }
            
            $.each( collection , function( key, val ) {
                if (type == "feature_promos"){
                    if (val.description.length > 110) {
                       val.description =  val.description.substring(0,300)+'...';
                    } 
                    
                    start = new Date (val.start_date);
                    end = new Date (val.end_date);
                    start.setDate(start.getDate()+1);
                    end.setDate(end.getDate()+1);
            
                    if (start.toDateString() == end.toDateString()) {
                        val.start_month = get_month(start.getMonth())
                        val.start_day = start.getDate()
                        
                        
                    } else {
                        val.start_month =get_month(start.getMonth())
                        val.start_day = start.getDate() 
                        val.end_month = get_month(end.getMonth())
                        val.end_day = end.getDate()
                        val.dash = " - "
                    }
                    
                    if (val.promotionable_type == "Store"){
                        var store_details = getStoreDetailsByID(val.promotionable_id);
                        val.store_name = store_details.name
                        val.store_slug = "/stores/"+store_details.slug
                    }else {
                        val.store_name = "The Bay Centre"
                        val.store_slug = "/home"
                    }
                }
                
                if (type == "banner_hours"){
                    if (val.is_closed == false){
                        val.status = "Open"
                    } else {
                        val.status = "Closed"
                    }
                    val.open_time = get_simple_hour(val.open_time)
                    val.close_time = get_simple_hour(val.close_time)
                   
                }
                
                
                var rendered = Mustache.render(template_html,val);
                item_rendered.push(rendered);
            });
            
            $(container).show();
            $(container).html(item_rendered.join(''));
            
        };
        
        function get_simple_hour (d){
            d = new Date(d)
            h = d.getUTCHours();
            if (h >= 12) {
                if ( h != 12) {
                    h = h - 12;    
                }
                
                i = "PM"
            } else {
                if (h == 0) {
                    h = 12
                }
                i = "AM"
            }
            
            return h+""+i;
        }
        function get_month (id){
            switch(id) {
                case 0:
                    month = "Jan"
                    break;
                case 1:
                    month = "Feb"
                    break;
                case 2:
                    month = "Mar"
                    break;
                case 3:
                    month = "Apr"
                    break;
                case 4:
                    month = "May"
                    break;
                case 5:
                    month = "June"
                    break;
                case 6:
                    month = "July"
                    break;
                case 7:
                    month = "Aug"
                    break;
                case 8:
                    month = "Sep"
                    break;
                case 9:
                    month = "Oct"
                    break;
                case 10:
                    month = "Nov"
                    break;
                case 11:
                    month = "Dec"
                    break;
                    
            }
            return month;
        }
        
        
        $("#left_image").attr("src", "http://kodekloud.s3.amazonaws.com/sites/556628266e6f640eb3000000/754b0df7f7a73f8e7b7e98501e85a474/home_slide2.jpg")
        $("#right_image").attr("src", "http://kodekloud.s3.amazonaws.com/sites/556628266e6f640eb3000000/754b0df7f7a73f8e7b7e98501e85a474/home_slide3.jpg")
    });
</script>