<script type="text/javascript" >

     $(".tabs li").click(function(e){
            var clicked = this.id
            $(".tabs li").css({"background":"transparent","color":"white"});
            $(".tabs li").find("div").css("color","white");
            $(this).css("background","white");
            $(this).find("div").css("color","#4d4d4f");
            $(".tab_content li").hide();
            $("#"+clicked + "_content").show()
            $("#"+clicked + "_content li").show()
            switch(clicked) {
                        case "tab_1":
                            load_slider("flexslider")
                            break;
                        case "tab_2":
                            load_slider("flexslider2")
                            break;
                        case "tab_3":
                            load_slider("flexslider3")
                            break;
                        
                    }
            
            
        
        });
        
    
    function load_slider(slider){
            
        $('.'+slider).flexslider({
            animation: "slide",
            controlNav: false,
            directionNav: true,    
            animationLoop: true,
            prevText: "",
            nextText: ""
        });
    }
        
        
    function load_fading_slider(slider){
            
        $('.'+slider).flexslider({
            animation: "slide",
            controlNav: false,
            directionNav: true,        
            prevText: "",
            nextText: ""
        });
    }
    
    
    $(document).ready(function() {
        function render_page_details(){
            var promos = getPromotionsList();
            var events = getEventsList();
            
            basic_event_array = []
            news_event_array = []
             $.each( events , function( key, val ){
                 today = new Date();
                 webDate = new Date(val.show_on_web_date);
                 if (today >= webDate) {
                     c = $.inArray("news", val.tags)
                     if (c == 0){
                         news_event_array.push(val)
                     } else {
                         basic_event_array.push(val)
                     }
                 } 
             });
             
            if (basic_event_array.length > 2){
                var basic_events = basic_event_array.slice(0,2);
            } else {
                var basic_events = basic_event_array;
            }
            
            var first_tab_content = []
            first_tab_content = (basic_events);
            
            if (news_event_array.length > 1){
                $.merge(first_tab_content,(news_event_array.slice(0,1)));
              
            } else {
                $.merge(first_tab_content,(news_event_array));
            }
            
        
            var second_tab_content = []
            
            second_tab_content = (basic_events); 
            
            promo_array = []
             $.each( promos , function( key, val ){
                 today = new Date();
                 webDate = new Date(val.show_on_web_date);
                 if (today >= webDate) {
                     if(val.is_featured == false){
                        promo_array.push(val)   
                     }
                     
                 } 
             });
           
            
            if (promo_array.length > 1){
                $.merge(second_tab_content,(promo_array.slice(0,1)));
            } else {
                $.merge(second_tab_content,(promo_array));
            }
           
           third_tab_content = promos.slice(0,3);
           
            featured_promos = []
            $.each( promos , function( key, val ) {
                if (val.is_featured == true){
                    featured_promos.push(val)
                }
            })
            featured_promos = featured_promos.sort(function(a,b){
               if(a.feature_item_index > b.feature_item_index){ return 1}
                if(a.feature_item_index < b.feature_item_index){ return -1}
                  return 0;
            });
            
            stores = getStoresList();
            new_stores = []
             $.each( stores , function( key, val ) {
                 if (val.is_coming_soon_store == true){
                     new_stores.push(val)
                 }
             });
            
            
            
            
            if (first_tab_content.length > 0 ){
                renderHomePageData("#feature_slider_ul", "#feature_slider_template", first_tab_content, "feature_promos");
            } else {
                $("#no_features").show()
            }
            
            if (second_tab_content.length > 0 ){
                renderHomePageData("#store_slider_ul", "#store_slider_template", second_tab_content, "mixed")
            } else {
                $("#no_stores").show()
            }
            
            if (third_tab_content.length > 0 ){
                renderHomePageData("#promo_slider_ul", "#current_promo_slider_template", third_tab_content, "feature_promos")
            } else {
                $("#no_promos").show()
            }
            
            
            var banners = getBanners()
            renderHomePageData("#banner_slider_ul","#banner_slider_template",banners,"banners")
            
            var featureList = getFeatureList();
            renderHomePageData("#feature_container", "#feature_template", featureList, "feature_items") 
            
            var banner_hours = getTodaysHours();
            renderHomePageData("#banner_hours_container", "#banner_hours_template", banner_hours, "banner_hours") 
            
            $(".loading_overlay").hide();
            $("#page_content").show();
            load_slider("flexslider");
            load_fading_slider("flexslider4")
            
        }
        loadMallData(render_page_details);  
        
        
        function renderHomePageData(container, template, collection, type){
            var item_list = [];
            var item_rendered = [];
            var template_html = $(template).html();
            Mustache.parse(template_html);   // optional, speeds up future uses
            if (type == "banner_hours"){
                item_list.push(collection)
                collection = item_list
            }
            
            $.each( collection , function( key, val ) {
                if (type == "stores"){
                    if (val.new_store_open_date){
                        start = new Date (val.new_store_open_date); 
                        start.setDate(start.getDate()+1);
                        val.start_month = get_month(start.getMonth())
                        val.start_day = start.getDate()
                        val.date_string = val.start_month + " " + val.start_day
                    } else {
                        val.start_month  = "Opening";
                        val.start_day = "Soon"
                    }
                    
                }
                
                if (type == "feature_promos"){
                    if (val.description.length > 110) {
                       val.description =  val.description.substring(0,100)+'...';
                    } 
                    
                    start = new Date (val.start_date);
                    end = new Date (val.end_date);
                    start.setDate(start.getDate()+1);
                    end.setDate(end.getDate()+1);
            
                    if (start.toDateString() == end.toDateString()) {
                        val.start_month = get_month(start.getMonth())
                        val.start_day = start.getDate()
                        
                        val.date_string = val.start_month + " " + val.start_day
                        
                        
                    } else {
                        val.start_month =get_month(start.getMonth())
                        val.start_day = start.getDate() 
                        val.end_month = get_month(end.getMonth())
                        val.end_day = end.getDate()
                        val.end_day = "  - " + val.end_day
                    }
                    
                    if (val.eventable_type == "Store"){
                        var store_details = getStoreDetailsByID(val.eventable_id);
                        val.store_name = store_details.name
                        val.store_slug = "/stores/"+store_details.slug
                    }else {
                        val.store_name = "The Bay Centre"
                        val.store_slug = "/home"
                    }
                }
                
                if (type == "banner_hours"){
                    if (val.is_closed == false){
                        val.status = "Open"
                    } else {
                        val.status = "Closed"
                    }
                    val.open_time = get_simple_hour(val.open_time)
                    val.close_time = get_simple_hour(val.close_time)
                   
                }
                
                
                var rendered = Mustache.render(template_html,val);
                item_rendered.push(rendered);
            });
            
            $(container).show();
            $(container).html(item_rendered.join(''));
            
        };
        
        function get_simple_hour (d){
            d = new Date(d)
            h = d.getUTCHours();
            if (h >= 12) {
                if ( h != 12) {
                    h = h - 12;    
                }
                
                i = "PM"
            } else {
                if (h == 0) {
                    h = 12
                }
                i = "AM"
            }
            
            return h+""+i;
        }
        function get_month (id){
            switch(id) {
                case 0:
                    month = "Jan"
                    break;
                case 1:
                    month = "Feb"
                    break;
                case 2:
                    month = "Mar"
                    break;
                case 3:
                    month = "Apr"
                    break;
                case 4:
                    month = "May"
                    break;
                case 5:
                    month = "Jun"
                    break;
                case 6:
                    month = "Jul"
                    break;
                case 7:
                    month = "Aug"
                    break;
                case 8:
                    month = "Sep"
                    break;
                case 9:
                    month = "Oct"
                    break;
                case 10:
                    month = "Nov"
                    break;
                case 11:
                    month = "Dec"
                    break;
                    
            }
            return month;
        }
        
        
        $("#left_image").attr("src", "http://kodekloud.s3.amazonaws.com/sites/556628266e6f640eb3000000/754b0df7f7a73f8e7b7e98501e85a474/home_slide2.jpg")
        $("#right_image").attr("src", "http://kodekloud.s3.amazonaws.com/sites/556628266e6f640eb3000000/754b0df7f7a73f8e7b7e98501e85a474/home_slide3.jpg")
    });
</script>